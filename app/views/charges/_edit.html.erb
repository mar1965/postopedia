<%= form_tag charges_path do %>
  <% if current_user.premium? %>
    <%= link_to "Downgrade", downgrade_user_path, method: :post, class: "btn btn-danger center-block" %>
  <% else %>
    <h4>Upgrade to Premium! Do it!</h4>
    <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>$15.00</span>
    </label>
    </article>

    <script class="stripe-button" src="https://checkout.stripe.com/checkout.js"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-description="Premium Membership - #{current_user.email}"
        data-amount="<%= 1500 %>"
        data-locale="auto">
    </script>
  <% end %>
<% end %>
